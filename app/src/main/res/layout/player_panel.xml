<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/relativeLayout1"
  android:layout_height="fill_parent" 
  android:layout_width="fill_parent" android:paddingTop="5px" >
    <ImageView android:id="@+id/imageView1" 
    android:src="@drawable/ic_menu_l" 
    android:layout_height="150px" 
    android:layout_width="150px" android:paddingTop="0px">
    </ImageView>
    <TextView android:text="时间" android:id="@+id/textView3" android:layout_height="wrap_content" android:textSize="18px" android:layout_width="fill_parent" android:layout_alignParentRight="true" android:layout_toRightOf="@+id/imageView1" android:layout_marginLeft="20px"></TextView>
    <TextView android:text="歌曲信息" android:id="@+id/textView2" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_below="@+id/imageView1" android:textSize="18px" android:textColor="#FFFFFFFF" android:paddingTop="5px"></TextView>
    <LinearLayout android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_alignParentBottom="true" android:orientation="vertical" android:background="#99333333">
        <View android:layout_width="fill_parent" android:layout_height="1px" android:focusable="false" android:background="#FF666666" android:id="@+id/view2"></View>
        <TextView android:id="@+id/textView1" android:layout_height="wrap_content" android:text="查找歌词" android:layout_width="fill_parent" android:textSize="14px" android:textColor="#FF4FF306"></TextView>
        <View android:id="@+id/view1" android:layout_width="fill_parent" android:layout_height="1px" android:focusable="false" android:background="#FF666666"></View>
        <LinearLayout android:id="@+id/linearLayout2" android:layout_height="wrap_content" android:layout_width="fill_parent" android:gravity="center" android:background="#99333333">
            <ImageButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:src="@drawable/ic_media_previous" android:layout_gravity="center" android:id="@+id/imageButton1"></ImageButton>
            <ImageButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:src="@drawable/ic_media_play" android:layout_gravity="center" android:id="@+id/imageButton2"></ImageButton>
            <ImageButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:src="@drawable/ic_media_next" android:layout_gravity="center" android:id="@+id/imageButton3"></ImageButton>
        </LinearLayout>
        <SeekBar android:id="@+id/seekBar1" android:layout_height="wrap_content" android:layout_width="fill_parent"></SeekBar>
    </LinearLayout>
</RelativeLayout>
